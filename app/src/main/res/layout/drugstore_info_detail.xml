<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="drugstore"
            type="com.justin.huang.maskmap.db.DrugStore" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ic_place_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/ic_place_desc"
            app:layout_constraintEnd_toStartOf="@+id/place_text_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_place_24dp" />

        <TextView
            android:id="@+id/place_text_view"
            style="@style/drugstore_info_text_view"
            android:layout_marginStart="@dimen/card_item_margin"
            android:text="@{drugstore.address}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ic_place_image_view"
            app:layout_constraintTop_toTopOf="@+id/ic_place_image_view"
            tools:text="地址資訊" />

        <ImageView
            android:id="@+id/ic_note_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/card_item_margin"
            android:contentDescription="@string/ic_note_desc"
            app:layout_constraintEnd_toStartOf="@+id/note_text_view"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_place_image_view"
            app:srcCompat="@drawable/ic_note_24dp" />

        <TextView
            android:id="@+id/note_text_view"
            style="@style/drugstore_info_text_view"
            android:layout_marginStart="@dimen/card_item_margin"
            android:text="@{drugstore.note}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ic_note_image_view"
            app:layout_constraintTop_toTopOf="@+id/ic_note_image_view"
            tools:text="備註說明" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>